<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--    <typeHandlers>-->
    <!--        <typeHandler jdbcType="CHAR" javaType="string" handler="com.east.demo.common.handler.MyStringHandler"/>-->
    <!--    </typeHandlers>-->
    <!--    &lt;!&ndash; 定义数据库的信息，默认使用development数据库构建环境 &ndash;&gt;-->
    <properties resource="application.yaml"/>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="oracle.jdbc.OracleDriver"/>
                <property name="url" value="${spring.datasource.url}"/>
                <property name="username" value="${spring.datasource.username}"/>
                <property name="password" value="${spring.datasource.password}"/>
            </dataSource>
        </environment>
    </environments>
    <!-- 定义映射器 -->
    <mappers>
        <!--        <package name="com.east.demo.persist.mapper"/>-->
        <mapper resource="mapper/LyUserInfoMapper.xml"/>
        <!--        <mapper class="LyUserInfoMapper"/>-->
    </mappers>
</configuration>
